@using ControleDeContatos.Enums
@model List<UsuarioModel>

@{
    ViewData["Title"] = "Listagem de Usuários";
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Status: </strong> @TempData["MensagemSucesso"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Status: </strong> @TempData["MensagemErro"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="d-grid gap-2 d-md-flex justify-content-md-start">
    <a class="btn btn-primary" role="button" asp-controller="Usuario" asp-action="Criar">Adicionar novo Usuário</a>
</div>

<h3 class="mt-4 mb-4">Listagem de Usuários</h3>

@if (Model != null && Model.Any())
{
    <table class="table mt-4" id="table-usuarios">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Login</th>
                <th scope="col">Email</th>
                <th scope="col">Perfil</th>
                <th scope="col">Total de contatos</th>
                <th scope="col">Data de cadastro</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>

            @foreach (UsuarioModel usuario in Model)
            {
                <tr>
                    <th scope="row">@usuario.Id</th>
                    <td>@usuario.Nome</td>
                    <td>@usuario.Login</td>
                    <td>@usuario.Email</td>
                    <td>@(usuario.Perfil == PerfilEnum.Admin ? "Administrador" : "Padrão")</td>
                    <td>
                        <a href="javascript:" usuario-id="@usuario.Id" class="btn btn-success btn-sm btn-total-contatos">
                            @(usuario.Contatos != null && usuario.Contatos.Any() ? usuario.Contatos.Count : 0)
                        </a>
                    </td>
                    <td>@usuario.DataCadastro</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a role="button" class="btn btn-primary" asp-controller="Usuario" asp-action="Editar" asp-route-id="@usuario.Id">Editar</a>
                            <a role="button" class="btn btn-danger" asp-controller="Usuario" asp-action="ApagarConfirmacao" asp-route-id="@usuario.Id">Apagar</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>


    <div id="modalContatosUsuario" class="modal fade" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Listagem de contatos</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="listaContatosUsuario"></div>
                </div>                
            </div>
        </div>
    </div>
}
else
{
    <div class="field-validation-error">Nenhum usuário foi encontrado</div>
}
