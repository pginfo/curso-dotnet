@model ContatoModel

@{
    ViewData["Title"] = "Editar contato";
}


<h3>Editar contato</h3>

<form class="mt-4" asp-controller="Contato" asp-action="Alterar" method="post">

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" id="nome" placeholder="Nome" asp-for="Nome">
        @Html.ValidationMessageFor(c => c.Nome)
    </div>

    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="email" class="form-control" id="email" placeholder="E-mail" asp-for="Email">
        @Html.ValidationMessageFor(c => c.Email)
    </div>

    <div class="form-group">
        <label for="celular">Celular</label>
        <input type="text" class="form-control" id="celular" placeholder="Celular" asp-for="Celular">
        @Html.ValidationMessageFor(c => c.Celular)
    </div>

    <button type="submit" class="btn btn-block btn-primary">Alterar</button>
    <a role="button" class="btn btn-block btn-secondary" asp-controller="Contato" asp-action="Index">Voltar</a>

</form>
